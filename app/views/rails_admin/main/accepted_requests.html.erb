<% if @accepted_requests.present?%>
<table class="table">
	<h1>Accepted requests</h1>
	<thead class="thead-dark">
	<tr>
		<th scope="col">Id</th>
		<th scope="col">Text</th>
		<th scope="col">Time</th>
		<th scope="col">Status</th>
	</tr>
	</thead>
	<tbody>
	<% @accepted_requests.all.each do |f|%>
	<tr>
		<td><%= f.post_id%></td>
		<% text = Post.find_by(:id=>f.post_id).text%>
		<td><%=text%></td>
		<td><%=f.time_taken%></td>
		<td><%=f.status%></td>
		<%if f.status != "edited"%>
		<td><%=link_to 'change',proof_reading_path(:id=>f.post_id),class: "btn btn-primary btn-sm"%>	
			<%= link_to "Reject" ,rejecting_request_path(:id=>f.post_id) ,class: "btn btn-primary btn-sm"%>
		</td>
		<%end%>
	</tr>
	<%end%>
	</tbody>
</table>
<%else%>
<h3>Didn't have any accepted requests</h3>
<%end%>
<% if @rejected_requests.present?%>

<table class="table">
	<h1>User unsatisified requests</h1>
	<thead class="thead-dark">
	<tr>
		<th scope="col">Id</th>
		<th scope="col">Text</th>
		<th scope="col">Time</th>
		<th scope="col">Status</th>
	</tr>
	</thead>
	<tbody>
	<% @rejected_requests.all.each do |f|%>
	<tr>
		<td><%= f.post_id%></td>
		<% text = Post.find_by(:id=>f.post_id).text%>
		<td><%=text%></td>
		<td><%=f.time_taken%></td>
		<td><%=f.status%></td>
		<td><%=link_to 'change',proof_reading_path(:id=>f.post_id),class: "btn btn-primary btn-sm"%>	
			<%= link_to "Reject" ,rejecting_request_path(:id=>f.post_id) ,class: "btn btn-primary btn-sm"%>
		</td>
	</tr>
	<%end%>
	</tbody>
</table>
<%end%>
