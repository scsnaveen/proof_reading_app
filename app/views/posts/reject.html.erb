<div class="container">
	<div class="row">
		<div class="col-sm-6">
		<div class="card text-white bg-dark mb-4" style="max-width: 18rem;">
			<div class="card-header">Post(<%=@post.words%>)</div>
			<div class="card-body">
				<p class="card-text"><%=@post.text%></p>
			</div>
		</div>
		</div>
		<div class="col-sm-6">
		<div class="card text-white bg-dark mb-4" style="max-width: 18rem;">
			<div class="card-header">Post(<%=@post.words%>)</div>
			<div class="card-body">
				<p class="card-text"><%=@post.updated_text%></p>
			</div>
		</div>
		</div>
	</div>
		<h3>Please provide the reason</h3>
		<%= form_with url:posts_rejected_request_path(:id=>@post.id)  do |f|%>
		<div class="row">
			<div class="col-md-4 mx-auto mb-5">
				<%= f.text_area :reason,class: "form-control"%>
				<%= f.submit "Reject",class: "btn btn-lg"%>
			</div>
		</div>
		<%end%>
	
</div>

