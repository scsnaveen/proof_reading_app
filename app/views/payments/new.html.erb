<%=form_with url:payments_create_path(:id=>@post.id)  do |form|%>
<div class="container">
		<div class="row">
				<div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
						<div class="row">
								<div class="col-xs-6 col-sm-6 col-md-6">
										<address>
												<strong><%= User.find(@post.user_id).user_name%></strong>
										</address>
								</div>
								<div class="col-xs-6 col-sm-6 col-md-6 text-right">
										<p>
												<em><%=DateTime.now%></em>
										</p>
								</div>
						</div>
						<div class="row">
								<div class="text-center">
										<h1>Payment</h1>
								</div>
								</span>
								<table class="table table-hover">
										<thead>
												<tr>
														<th>Text</th>
														<th>Words</th>
														<th class="text-center">Price</th>
														<th class="text-center">Total</th>
												</tr>
										</thead>
										<tbody>
												<tr>
														<td class="col-md-4"><em><%=@post.text%></em></h4></td>
														<td class="col-md-1 text-center"><%=@post.words%></td>
														<td class="col-md-1 text-center"><%=@post.per_word_amount.to_f%></td>
														<td class="col-md-1 text-center"><span id ="amount"><%=@post.words * @post.per_word_amount.to_f %></span></td>

												</tr>
												<tr>
														<td>   </td>
														<td>   </td>
														<td class="text-right">Total: </td>
														<td class="text-center text-danger"><h4><strong><%=@post.words * @post.per_word_amount.to_f%></strong></h4></td>
												</tr>
												<tr>
													<td>
														<%= form.hidden_field :post_id,:id => "amount"%>
													<%=form.label :coupon_code%>
													<%= form.text_field :coupon_code,:id => "code",:keyup=>"total_amount()" %></td>
													<td>
														discount:<p id= "result"></p><%= form.hidden_field :discount_amount, :id=>"result"%>
													</td>
													<td><h4><strong>Total amount:<p id ="value"></p></strong></h4>
													</td>
												</tr>
										</tbody>
								</table>
									<%=form.submit  "Payment",class: "btn btn-success btn-lg btn-block"%>
						</div>
				</div>
		</div>
<%end%>

<script type="text/javascript">
	
 $(document).keyup(function() {
							

			$.ajax({    
				type: "GET",
				url: "coupon_verification",
				dataType: "json",
				data: { "code" : $("#code").val() },
				success: function(response){ 
				 var obj = JSON.stringify(response);
				 $("#result").html(obj)
				}

		});
			var id = "document.getElementById('<%=@post.id%>').innerHTML"
			$.ajax({    
				type: "GET",
				url: "tot_amount",
				dataType: "json",
				data: { "code" : $("#code").val(),
				"amount" : $("#amount").val()
			},
				success: function(response){ 
				 var obj = JSON.stringify(response);
				 $("#paid_amount").html(obj)
				}

		});

});

</script>
