<div class="container">
		<div class="row">
				<div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
						<div class="row">
								<div class="col-xs-6 col-sm-6 col-md-6">
										<address>
												<strong><%= User.find(@payment.user_id).user_name%></strong>
										</address>
								</div>
								<div class="col-xs-6 col-sm-6 col-md-6 text-right">
										<p>
												<em><%=@payment.created_at%></em>
										</p>
								</div>
						</div>
						<div class="row">
								<div class="text-center">
										<h1>Payment</h1>
								</div>
								</span>
								<table class="table table-hover">
										<thead>
												<tr>
														<th class="text-center">Text</th>
														<th class="text-center">Amount</th>
														<th class="text-center">Paid</th>
														<th class="text-center">Discount code</th>
												</tr>
										</thead>
										<tbody>
												<tr>
														<td class="col-md-4 text-center"><%=Post.find(@payment.post_id).text%></td>
														<td class="col-md-1 text-center"><%=@payment.amount%></td>
														<td class="col-md-1 text-center"><%=@payment.paid_amount%></td>
														<%if @payment.discount_id.present?%>
														<td class="col-md-2 text-center"><%=Coupon.find(@payment.discount_id).code%></td>
														<%else%>
														<td class="col-md-4 text-center"><%=link_to "Add Coupon",payments_new_path(id:@payment.post_id),class:"btn btn-primary btn-sm"%></td>
														<%end%>
												</tr>	
										</tbody>
								</table>
						</div>
				</div>
		</div>
