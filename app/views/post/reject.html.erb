<div class="container">
	<div class="row">
		<div class="col-md-4">
			<div class="span3">
				<div class="well">
					<h4><%= @post.text%></h4>
				</div>
			</div>
		</div>
		<%if @post.updated_text.present?%>
		<div class="col-md-4">
			<div class="span3">
				<div class="well">
					<h4><%= @post.updated_text%></h4>
				</div>
			</div>
		</div>
		<%= form_with url:post_rejected_request_path(:id=>@post.id)  do |f|%>
		<%= f.text_area :reason%>
		
		<div class="col-md-8">
			<%= f.submit "Reject"%>
		</div>
		<%end%>
		<%end%>
	</div>
</div>

