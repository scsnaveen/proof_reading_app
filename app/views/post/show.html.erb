

<div class="container">
	<div class="row">
		<div class="col-md-4">
			<div class="span3">
				<div class="well">
					<h4><%= @post.text%></h4>
				</div>
			</div>
		</div>
		<%if @post.updated_text.present?%>
		<div class="col-md-4">
			<div class="span3">
				<div class="well">
					<h4><%= @post.updated_text%></h4>
				</div>
			</div>
		</div>
		<div class="col-md-8">
			<button type="button" class="btn btn-info btn-circle"><i class="fa fa-check"></i></button>
			<button type="button" class="btn btn-warning btn-circle"><i class="fa fa-times"></i></button>
			<button type="button" class="btn btn-danger btn-circle"><i class="fa fa-heart"></i></button>
		</div>
		<%end%>		
	</div>
</div>

