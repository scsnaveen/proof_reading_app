<div class="container">
	<div class="row">
		<div class="col-md-4">
			<div class="span3">
				<div class="well">
					<h4><%= @post.text%></h4>
				</div>
			</div>
		</div>
		<%if Payment.find_by(post_id: @post.id).present?%>
		<%if @post.updated_text.present?%>
		<div class="col-md-4">
			<div class="span3">
				<div class="well">
					<h4><%= @post.updated_text%></h4>
				</div>
			</div>
		</div>
		<div class="col-md-8">
			<%= link_to "Accept",post_accept_path(:id=>@post.id),class: "btn btn-success",method: :post %>
			<%= link_to "Reject", post_reject_path(:id=>@post.id),class: "btn btn-danger "%>
			</div>
		<%end%>
			<%else%>
			<div class="col-md-4">
				<%= link_to "Pay",payments_new_path(:id=>@post.id),class: "btn btn-success" %>
			</div>
			<%end%>
	</div>
</div>

